{
    "buildCommand": "npm run build:all",
    "outputDirectory": "dist",
    "cleanUrls": true,
    "rewrites": [
        {
            "source": "/valpoint.json",
            "destination": "/api/valpoint"
        },
        {
            "source": "/:path((?!wiki|api|assets|_next).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*).html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/wiki/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=86400"
                }
            ]
        }
    ]
}